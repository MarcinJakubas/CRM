<Window x:Class="CRM_WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="250" Width="350">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Login" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="txtUsername" Margin="0,5,0,10"/>

            <TextBlock Text="Hasło" FontSize="16" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10"/>

            <Button Content="Zaloguj" Click="LoginButton_Click" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>